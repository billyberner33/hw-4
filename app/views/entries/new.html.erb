<h2>New Entry</h2>

<% if @current_user %>
  <form action="/entries" method="post" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title_input" class="form-label">Title</label>
      <input type="text" name="title" id="title_input" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="description_input" class="form-label">Description</label>
      <textarea name="description" id="description_input" class="form-control" rows="4" required></textarea>
    </div>

    <div class="mb-3">
      <label for="date_input" class="form-label">Occurred On</label>
      <input type="date" name="occurred_on" id="date_input" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="uploaded_image_input" class="form-label">Upload Image (optional)</label>
      <input type="file" name="uploaded_image" id="uploaded_image_input" class="form-control">
    </div>

    <button class="btn btn-primary">Save</button>
    <a href="/places" class="btn btn-secondary">Cancel</a>
  </form>
<% else %>
  <p>You must first <a href="/login">login</a> to create an entry.</p>
<% end %>